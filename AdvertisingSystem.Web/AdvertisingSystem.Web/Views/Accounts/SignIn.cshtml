@{
    ViewData["Title"] = "Signin Page";
}

@model SignInModel
       <div class="row">
           <div class="col-md-4">
               <h4>Login using your email address and password.</h4>
               <h5>
                   <a asp-controller="Accounts" asp-action="SignUp">If you are not a member you can sign up here.</a>
               </h5>
               <hr/>
               <form method="post" asp-controller="Accounts" asp-action="SignIn">
                   <div asp-validation-summary="All" class="text-danger">

                   </div>
                   <div class="form-group">
                       <label asp-for="Email"></label>
                       <input asp-for="Email" class="form-control"/>
                       <span asp-validation-for="Email" class="text-danger">Email is required</span>
                   </div>

                   <div class="form-group">
                       <label asp-for="Password"></label>
                       <input asp-for="Password" class="form-control"/>
                       <span asp-validation-for="Password" class="text-danger">Password is required</span>
                   </div>

                   <div class="form-group">
                       <input type="checkbox" asp-for="RememberMe"/>
                       @Html.DisplayName("Remember Me")
                   </div>
                   
                   <button type="submit" class="btn btn-info">Login</button>

               </form>
           </div>
       </div>
       
